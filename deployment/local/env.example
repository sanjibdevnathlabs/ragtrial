# Docker Compose Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Required Variables
# =============================================================================

# Google Gemini API Key (required for LLM functionality)
GEMINI_API_KEY=your-gemini-api-key-here

# =============================================================================
# Database Configuration
# =============================================================================

# MySQL root password (change in production!)
MYSQL_ROOT_PASSWORD=root

# MySQL database name
MYSQL_DATABASE=ragtrial

# MySQL user credentials
MYSQL_USER=ragtrial
MYSQL_PASSWORD=ragtrial

# =============================================================================
# Application Configuration
# =============================================================================

# Environment: development, docker, production
APP_ENV=docker

# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Number of Uvicorn workers (production only)
WORKERS=4

# =============================================================================
# Docker Image Tags (production only)
# =============================================================================

# Image tag to use (default: latest)
IMAGE_TAG=latest

# =============================================================================
# ChromaDB Configuration (optional)
# =============================================================================

# ChromaDB authentication (leave empty for no auth)
CHROMA_AUTH_CREDENTIALS=
CHROMA_AUTH_PROVIDER=

# =============================================================================
# Production-Only Variables
# =============================================================================

# Domain name for SSL (production)
# DOMAIN_NAME=example.com

# SSL certificate paths (production)
# SSL_CERT_PATH=/path/to/cert.pem
# SSL_KEY_PATH=/path/to/key.pem

